<% @products.each_with_index do |product, index| %>
  <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 d-flex flex-column shadow-sm">
      <div class="position-relative">
        <%= image_tag product["image"], class: "card-img-top img-fluid p-3", style: "height: 200px; object-fit: contain;" %>
      </div>
      <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate">
          <i class="bi bi-tag-fill text-primary"></i> <%= product["title"] %>
        </h5>
        <p class="card-text">
          <i class="bi bi-cash-coin text-success"></i> <strong>Price:</strong> $<%= product["price"] %>
        </p>
        <p class="card-text">
          <i class="bi bi-star-fill text-warning"></i> <strong>Rating:</strong> <%= product["rating"]["rate"] %> ‚≠ê
          (<%= product["rating"]["count"] %> reviews)
        </p>
        <div class="mt-auto text-center">
          <button class="btn btn-primary w-100 add-to-cart" data-title="<%= product["title"] %>">
            <i class="bi bi-cart-plus"></i> Add to Cart
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
