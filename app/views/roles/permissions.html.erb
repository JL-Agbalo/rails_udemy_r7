<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Associate Permission with Roles</h5>
    </div>
    <div class="card-body">
      <%= form_for :permission, url: store_permissions_url(@role), method: :post do |f| %> 
      <% @permissions.each do |permission| %>
      <div class="form-check mb-2">
        <%= check_box_tag "permission_ids[]", permission.id, @select_permission_ids.include?(permission.id), id: "permission_#{permission.id}", class: "form-check-input" %>
        <label class="form-check-label" for="permission_<%= permission.id %>"
          ><%= permission.name %></label
        >
      </div>
      <% end %>
      <div class="mt-3">
        <%= f.submit "Associate Permissions", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Back to Roles', roles_path, class: 'btn btn-secondary' %>
  </div>
</div>
