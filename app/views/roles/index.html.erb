<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Roles List</h5>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Role Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td>
                  <%= link_to 'Edit', edit_role_path(role), class: 'btn btn-sm
                  btn-warning' %>
                  <!--Delete Role are not working  -->
                  <%= link_to 'Delete', role_path(role), method: :delete, data:
                  { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
                  %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'New Role', new_role_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
