<%= form_for @role, html: { class: 'needs-validation', novalidate: true } do |f|
%>
<div class="mb-3">
  <label for="roleName" class="form-label">Role Name:</label>
  <%= f.text_field :name, class: 'form-control', id: 'roleName', required: true
  %>
  <div class="invalid-feedback">Please provide a role name.</div>
</div>

<div class="mb-3">
  <%= f.submit @role.new_record? ? 'Create Role' : 'Update Role', class: 'btn
  btn-primary' %>
</div>
<% end %>

<div class="mb-3">
  <%= link_to "Back to Role List", roles_path, class: 'btn btn-secondary' %>
</div>
