<div class="container mt-5">
  <h1 class="text-center">Employees</h1>

  <div class="text-end mb-3">
    <%= link_to 'New Employee', new_employee_path, class: 'btn btn-primary' %>
  </div>

  <% if @employees.present? %>
    <table class="table table-bordered table-striped mt-4">
      <thead class="thead-dark">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Has Passport</th>
          <th>Salary</th>
          <th>Notes</th>
          <th>Birthdate</th>
          <th>Hire Date</th>
          <th>Gender</th>
          <th>Department</th>
          <th>Country</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.firstname %></td>
            <td><%= employee.lastname %></td>
            <td><%= employee.phone_number %></td>
            <td><%= employee.haspassport ? 'Yes' : 'No' %></td>
            <td><%= number_to_currency(employee.salary) %></td>
            <td><%= employee.notes %></td>
            <td><%= employee.birthdate %></td>
            <td><%= employee.hiredate %></td>
            <td><%= employee.gender %></td>
            <td><%= employee.department.name %></td>
            <td><%= employee.country.name %></td>
            <td class="text-center">
              <%= link_to 'Details', employee_path(employee), class: 'btn btn-success btn-sm' %>
              <%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Delete', delete_employee_path(employee), class: 'btn btn-danger btn-sm' %>
            </td>        
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="alert alert-info text-center">No employees found.</p>
  <% end %>
</div>