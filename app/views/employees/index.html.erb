<div class="container mt-5">
  <h1 class="text-center">Employees</h1>

  <% if @employees.present? %>
    <table class="table table-bordered table-striped mt-4">
      <thead class="thead-dark">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Has Passport</th>
          <th>Salary</th>
          <th>Notes</th>
          <th>Birthdate</th>
          <th>Hire Date</th>
          <th>Gender</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.firstname %></td>
            <td><%= employee.lastname %></td>
            <td><%= employee.phone_number %></td>
            <td><%= employee.haspassport ? 'Yes' : 'No' %></td>
            <td><%= number_to_currency(employee.salary) %></td>
            <td><%= employee.notes %></td>
            <td><%= employee.birthdate %></td>
            <td><%= employee.hiredate %></td>
            <td><%= employee.gender %></td>
            <td class="text-center">
              <%= link_to 'Details', employee_path(employee), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-primary btn-sm' %>
            </td>        
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="alert alert-info text-center">No employees found.</p>
  <% end %>
</div>