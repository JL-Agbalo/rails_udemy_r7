<div class="container mt-5">
<%= form_tag(employeespaginations_path, method: :get, class: 'form-inline mb-3') do %>
  <div class="input-group">
    <%= text_field_tag(:search, params[:search], placeholder: "Search...", class: 'form-control mr-2') %>
    <div class="input-group-append">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

  <div class="page-size-dropdown mb-3">
    <%= form_tag employeespaginations_path, method: :get, class: 'form-inline' do %>
      <div class="form-group">
        <%= label_tag :per_page, 'Page Size', class: 'mr-2' %>
        <%= select_tag :per_page, options_for_select([5, 10, 15, 20, 25, 50, 100], params[:per_page].to_i), { onChange: 'this.form.submit()', class: 'form-control' } %>
      </div>
    <% end %>
  </div>
  <h1 class="text-center">Employees</h1>
  <table class="table table-striped table-bordered mt-3">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Salary</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname %></td>
          <td><%= employee.lastname %></td>
          <td><%= employee.salary %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @employees %>
  </div>
</div>