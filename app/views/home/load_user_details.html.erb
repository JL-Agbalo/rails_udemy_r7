<div class="container">
    <div class="row">
        <!-- User Details Section -->
        <div class="col-md-6">
            <h4 class="mt-4">User Details</h4>
            <div class="card">
                <div class="card-header">
                    <%= @user["username"] %>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <!-- Image -->
                        <%= image_tag "https://i.pravatar.cc", class: "img-fluid rounded-circle" %>
                    </div>
                    <div class="mt-3">
                        <!-- Display additional user info if needed -->
                        <p><strong>Email:</strong> <%= @user["email"] %></p>
                        <p><strong>Phone:</strong> <%= @user["phone"] %></p>
                    </div>
                </div>
                <div class="card-footer">
                    <%= link_to "Next User", load_user_details_path(params[:id].to_i + 1), class: "btn btn-danger" %>
                    <%= link_to "Previous User", load_user_details_path(params[:id].to_i - 1), class: "btn btn-danger" %>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" value="" id="address_details">
                        <label for="address_details" class="form-check-label">Show Address Details</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Address Details Section -->
        <div class="col-md-6 address-details-div d-none">
            <h4 class="mt-4">Address Details</h4>
            <div class="card">
                <div class="card-header">
                    <strong>Address Information</strong>
                </div>
                <div class="card-body">
                    <p><strong>Street:</strong> <%= @user["address"]["street"] %></p>
                    <p><strong>City:</strong> <%= @user["address"]["city"] %></p>
                    <p><strong>Zip Code:</strong> <%= @user["address"]["zipcode"] %></p>
                    <p><strong>Country:</strong> <%= @user["address"]["country"] || "Not Available" %></p>
                </div>
            </div>
        </div>
    </div>
</div>