<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h3>Employee List</h3>
        </div>
        <div class="card-body">
          <div class="text-right mb-3">
            <%= link_to 'Create', new_employeeinfodetail_path, class: 'btn
            btn-primary' %>
          </div>
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Actions/Operations</th>
              </tr>
            </thead>
            <tbody>
              <% @employees.each do |emp| %>
              <tr>
                <th scope="row"><%= emp.id %></th>
                <td><%= emp.firstname %></td>
                <td><%= emp.lastname %></td>
                <td>
                  <%= link_to 'Details', new_employeeinfodetail_path(emp),
                  class: 'btn btn-info btn-sm' %>
                </td>
              </tr>
              <% end %> <% unless @employees.present? %>
              <tr>
                <td colspan="4" class="text-center">No records found</td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
