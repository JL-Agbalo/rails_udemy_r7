<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Update Profile</h5>
        </div>
        <div class="card-body">
          <%= form_for :customer, url: manage_customer_path, method: :post,
          html: { class: "needs-validation", novalidate: true } do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %> <%=
            f.email_field :email, value: current_admin.email, class:
            "form-control", required: true %>
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>

          <div class="mb-3">
            <%= f.label :username, "Username", class: "form-label" %> <%=
            f.text_field :username, value: current_admin.username, class:
            "form-control", required: true %>
            <div class="invalid-feedback">Please enter a username.</div>
          </div>

          <div class="mb-3">
            <%= f.label :first_name, "First Name", class: "form-label" %> <%=
            f.text_field :first_name, value: current_admin.first_name, class:
            "form-control", required: true %>
            <div class="invalid-feedback">Please enter your first name.</div>
          </div>

          <div class="mb-3">
            <%= f.label :last_name, "Last Name", class: "form-label" %> <%=
            f.text_field :last_name, value: current_admin.last_name, class:
            "form-control", required: true %>
            <div class="invalid-feedback">Please enter your last name.</div>
          </div>

          <div class="d-grid">
            <%= f.submit "Update Profile", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
